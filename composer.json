{
    "name": "dv5150/shop",
    "description": "Laravel Webshop package",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DV5150\\Shop\\": "src/",
            "DV5150\\Shop\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "David Szabados",
            "email": "dv5150dev@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-sluggable": "^3.4",
        "spatie/laravel-package-tools": "^1.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "orchestra/testbench": "^6",
        "pestphp/pest": "^1.22",
        "pestphp/pest-plugin-laravel": "^1.4",
        "pestphp/pest-plugin-parallel": "^1.2"
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "DV5150\\Shop\\ShopServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
